{% extends "base.twig" %}
{% block body %}

    <div class="container">
      <div class="row">
      <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
       <br>
<p class=" text-info"> {{ "now"|date("d/m/Y") }}</p>
      </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
   
   
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">{{ usuario }}</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>
                
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Nombre:</td>
                        <td>{{ nombreCompleto }}</td>
                      </tr>
                      <tr>
                        <td>Apellido:</td>
                        <td><input type="text" value="{{ apellido }}" disabled></input></td>
                        <td><i class="glyphicon glyphicon-pencil"></i></td>
                      </tr>
                      <tr>
                        <td>Cantidad Semanal:</td>
                        <td>{{ cantSemanal }}</td>
                      </tr>
                      <tr>
                        <td>Celular</td>
                        <td>{{ celular }}</td>
                      </tr>

                      <tr>
                        <td>Email</td>
                        <td>{{ email }}</td>
                      </tr>
                        
                      </tr>
                     
                    </tbody>
                  </table>
                  
                </div>
              </div>
            </div>
                 <div class="panel-footer">
                        <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"></a>
                        <span class="pull-right">
                            <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                        </span>
                    </div>
            
          </div>
        </div>
      </div>
    </div>

{% endblock %}
